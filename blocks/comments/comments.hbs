<div class="panel main panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Комментарии</h3>
    </div>
    <div class="panel-body">
        <section class="comment-list">
            {{#each comments}}
                <div class="row">
                    <div class="col-sm-5">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                                <strong>{{author}}</strong>
                            </div>
                            <div class="panel-body">
                                {{text}}
                            </div>
                        </div>
                    </div>
                </div>
            {{/each}}
            </section>
        {{#if user}}
             {{#if place}}
                <form action='/place-comment' class="commentForm" data-name="{{quest}}#{{title}}" method="post">
             {{else}}
                <form action='/quest-comment' class="commentForm" data-name="{{title}}" method="post">
             {{/if}}
                <label for="comment">Комментарий:</label>
                <textarea class="new-comment form-control" rows="5" id="comment" required></textarea>
                <button type="submit" class="btn btn-info" disabled>Добавить комментарий</button>
            </form>
        {{else}}
            <div class="disable-comment">Оставлять комментарии могут только зарегестрированные пользователи</div>
        {{/if}}
    </div>
</div>
