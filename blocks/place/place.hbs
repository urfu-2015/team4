<div class="row">
    <div class="place">
        <div class="thumbnail ">
            <h3 class="place-title">{{title}}</h3>
            <div class="statistics">
                <span class="statistics-icon glyphicon glyphicon-user"></span>
                <span class="badge" id="{{url}}-count">{{checkins.length}}</span>
            </div>
            <div class="img">
                {{#if checkIn}}
                    <span class="glyphicon glyphicon-ok-circle success-checkIn"></span>
                {{/if}}
                <img class="" src={{img}} alt={{title}}>
            </div>
            <div class="caption" data-name="{{quest}}#{{title}}">
                <div class="place-head" id="{{url}}-collapse-group">
                    <button data-toggle="collapse"
                            data-parent="#{{url}}-collapse-group"
                            class="comment-icon glyphicon glyphicon-comment"
                            data-target="#{{url}}-comments">
                    </button>
                    <button data-latitude="{{geo.latitude}}"
                            data-toggle="collapse"
                            data-parent="#{{url}}-collapse-group"
                            data-target="#{{url}}-map"
                            data-longitude="{{geo.longitude}}"
                            class="add-route-btn glyphicon glyphicon-globe">
                    </button>
                    <button data-latitude="{{geo.latitude}}"
                            data-toggle="collapse"
                            data-parent="#{{url}}-collapse-group"
                            data-target="#{{url}}-img"
                            data-longitude="{{geo.longitude}}"
                            class="insta-img glyphicon glyphicon-picture">
                    </button>
                    <div class="accordion-group panel">
                        {{> comments/comments this}}
                        <div id="{{url}}-map" class="collapse map"></div>
                        <div id="{{url}}-img" class="collapse">
                            <div id="links" class="js-links" style="display: none"></div>
                            <div class="loading-insta-gif"></div>
                        </div>
                    </div>
                </div>
            </div>
            <div>
            {{#if inProgress}}
                {{#unless checkIn}}
                    <button data-name="{{quest}}#{{title}}" data-url="{{url}}" class="btn btn-success check-in">Check-in</button>
                {{/unless}}
            {{/if}}
            </div>
        </div>
    </div>
</div>
<!-- The Bootstrap Image Gallery lightbox, should be a child element of the document body -->
<div id="blueimp-gallery" class="blueimp-gallery">
    <!-- The container for the modal slides -->
    <div class="slides"></div>
    <!-- Controls for the borderless lightbox -->
    <h3 class="title"></h3>
    <a class="prev">‹</a>
    <a class="next">›</a>
    <a class="close">×</a>
    <a class="play-pause"></a>
    <ol class="indicator"></ol>
    <!-- The modal dialog, which will be used to wrap the lightbox content -->
    <div class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" aria-hidden="true">&times;</button>
                    <h4 class="modal-title"></h4>
                </div>
                <div class="modal-body next"></div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default pull-left prev">
                        <i class="glyphicon glyphicon-chevron-left"></i>
                        prev
                    </button>
                    <button type="button" class="btn btn-primary next">
                        next
                        <i class="glyphicon glyphicon-chevron-right"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
