{{> layout/layout_top title="Авторизация" link-css="/authorization.css"}}
{{> header/header }}
<form class="form-horizontal form-of-authorization">
    <div class="form-group">
        <label for="email" class="col-sm-2 control-label">Email</label>
        <div class="col-sm-10">
            <input type="email" class="form-control" id="email" placeholder="Email">
        </div>
    </div>
    <div class="form-group">
        <label for="password" class="col-sm-2 control-label">Пароль</label>

        <div class="col-sm-10">
            <input type="password" class="form-control" id="password" placeholder="Password">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            {{> button/button text='Авторизация' id='submit'}}
            <a href="/reg" class="link-for-checkIn">Регистрация</a>
        </div>
    </div>
</form>
{{> footer/footer }}
{{> layout/layout_bottom link-js="/authorization.js"}}