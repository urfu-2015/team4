{{#extend "base"}}
    {{#content "title"}}
        <title>Авторизация</title>
    {{/content}}

    {{#content "styles"}}
        <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Roboto:400,100,300,500">
        {{#if commonData.isDev}}
            <link rel="stylesheet" href="/authorization.css">
        {{else}}
            <link rel="stylesheet" href="//dream-team-4.surge.sh/authorization.css">
        {{/if}}
    {{/content}}

    {{#content "main"}}
        <div class="form">
            <div class="form-box">
                <div class="form-top">
                    <div class="form-top-left">
                        <h3>Вход</h3>
                    </div>
                    <div class="form-top-right">
                        <i class="fa fa-key"></i>
                    </div>
                </div>
                <div class="form-bottom">
                    <form role="form" action="" method="post" class="login-form" id="auth-form">
                        <div class="form-group has-feedback has-error">
                            <div class="js-input-group" data-validate="email">
                                <label class="sr-only" for="form-username">E-mail</label>
                                <input name="form-username" class="form-control" placeholder="Email" type="text" id="email" required>
                                <span class="form-control-feedback glyphicon glyphicon-remove" style="top: 10px;" aria-hidden="true"></span>
                            </div>
                        </div>
                        <div class="form-group has-feedback has-error">
                            <div class="js-input-group">
                                <label class="sr-only" for="form-password">Пароль</label>
                                <input name="form-password" class="form-control" placeholder="Пароль" type="password" id="password" required>
                                <span class="form-control-feedback glyphicon glyphicon-remove" style="top: 10px;" aria-hidden="true"></span>
                            </div>
                        </div>
                        <p class="bg-danger danger-message"></p>
                        <button type="submit" class="btn" disabled>Вход</button>
                        <a href="/reg" class="link-for-checkIn">Регистрация</a>
                    </form>
                    <a id="vk"><button class="btn">login by vk</button></a>
                </div>
            </div>
        </div>
        <div id="vk_api_transport"></div>
    {{/content}}

    {{#content "scripts"}}
        {{#if commonData.isDev}}
            <script src="/authorization.js"></script>
        {{else}}
            <script src="//dream-team-4.surge.sh/authorization.js"></script>
        {{/if}}
    {{/content}}
{{/extend}}
