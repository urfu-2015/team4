{{#extend "base"}}
    {{#content "title"}}
        <title>Авторизация</title>
    {{/content}}

    {{#content "styles"}}
        <link rel="stylesheet" href="/authorization.css">
    {{/content}}

    {{#content "main"}}
        <form class="form-horizontal form-of-authorization" id="auth-form">
            <div class="form-group">
                <label for="email" class="col-sm-2 control-label">Email</label>

                <div class="col-sm-10">
                    <input type="email" class="form-control" id="email" placeholder="Email">
                </div>
            </div>
            <div class="form-group">
                <label for="password" class="col-sm-2 control-label">Пароль</label>

                <div class="col-sm-10">
                    <input type="password" class="form-control" id="password" placeholder="Password">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button class="btn btn-default" type="submit">Авторизация</button>
                    <a href="/reg" class="link-for-checkIn">Регистрация</a>
                </div>
            </div>
        </form>
    {{/content}}

    {{#content "scripts"}}
        <script src="/authorization.js"></script>
    {{/content}}
{{/extend}}
