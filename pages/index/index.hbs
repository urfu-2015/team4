{{#extend "base"}}
    {{#content "title"}}
        <title>Фотоквесты</title>
    {{/content}}

    {{#content "styles"}}
        <link rel="stylesheet" href="/index.css">
    {{/content}}

    {{#content "main"}}
        <div class="container">

            <div class="row">
                <div class="box">
                    <div class="col-lg-12">
                        <hr>
                        <h2 class="intro-text text-center">Список квестов</h2>
                        <hr>
                    </div>
                    <div id="list-of-quests">
                        {{#each quests}}
                            <div class="col-lg-12 text-center">
                                <div class="img-box">
                                    <img class="img-responsive img-border img-full" src={{photo}} alt="{{title}}">
                                </div>
                                <h2>{{title}}</h2>
                                <a href="/quest/{{url}}" class="btn btn-default btn-lg">Посмотреть</a>
                                <hr>
                            </div>
                        {{/each}}
                    </div>
                    <div class="col-lg-12 text-center">
                        <button class="more-btn" id="getMore" onmousedown="return false">Еще</button>
                    </div>
                </div>
            </div>

        </div>
    {{/content}}

    {{#content "scripts"}}
        <script src="/index.js"></script>
    {{/content}}
{{/extend}}
