{{#extend "base"}}
    {{#content "title"}}
        <title>Регистрация</title>
    {{/content}}

    {{#content "styles"}}
        <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Roboto:400,100,300,500">
        <link rel="stylesheet" href="../registration.css">
    {{/content}}

    {{#content "main"}}
        <div class="form">

            <div class="form-box">
                <div class="form-top">
                    <div class="form-top-left">
                        <h3>Регистрация</h3>
                        <p>Заполните форму:</p>
                    </div>
                    <div class="form-top-right">
                        <i class="fa fa-pencil"></i>
                    </div>
                </div>
                <div class="form-bottom">
                    <form role="form" action="" method="post" class="registration-form" id="reg-form">
                        <div class="form-group">
                            <label class="sr-only" for="form-first-name">Имя пользователя</label>
                            <input type="text" name="form-first-name" placeholder="Username..." class="form-first-name form-control" id="name">
                        </div>
                        <div class="form-group">
                            <label class="sr-only" for="form-last-name">Email</label>
                            <input type="text" name="form-last-name" placeholder="Email..." class="form-last-name form-control" id="email">
                        </div>
                        <div class="form-group">
                            <label class="sr-only" for="form-email">Пароль</label>
                            <input type="text" name="form-email" placeholder="Пароль..." class="form-email form-control" id="password">
                        </div>
                        <button type="submit" class="btn">Зарегистрироваться</button>
                        <span>Уже зарегистрированы? <a href="/auth" class="link-for-checkIn">Вход</a></span>
                    </form>
                </div>
            </div>

        </div>
    {{/content}}

    {{#content "scripts"}}
        <script src="/registration.js"></script>
    {{/content}}
{{/extend}}



