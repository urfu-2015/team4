{{#extend "base"}}
    {{#content "title"}}
        <title>{{username}}</title>
    {{/content}}

    {{#content "styles"}}
        {{#if commonData.isDev}}
            <link rel="stylesheet" href="/userPage.css">
        {{else}}
            <link rel="stylesheet" href="//dream-team-4.surge.sh/userPage.css">
        {{/if}}
    {{/content}}

    {{#content "main"}}
    <div class="container">
        <div class="col-lg-12">
            <div class="row">
                <div class="box">
                    <div class="main-content">
                        {{#if self}}
                            <p class="text-center username">
                                Моя страничка
                            </p>
                        {{else}}
                            <p class="text-center username">
                                {{username}}
                            </p>
                        {{/if}}

                        <ul class="nav nav-tabs nav-justified" role="tablist" id="myTabExample">
                            <li><a href="#my-quest" role="tab" data-toggle="tab">Созданные</a></li>
                            <li><a href="#finished-quest" role="tab" data-toggle="tab">Пройденные</a></li>
                            <li><a href="#in-process-quest" role="tab" data-toggle="tab">В процессе</a></li>
                        </ul>

                        <div class="tab-content">
                            <div class="tab-pane" id="my-quest"> 
                                <div class="quest">
                                    <div class="row">
                                        {{#if created}}
                                            {{>tableImages/tableImages this created=../created arr=../created}}
                                        {{else}}
                                            <div class="text-center message">
                                                {{#if self}}
                                                    Вы еще не создали ни одного квеста
                                                {{else}}
                                                    Пользователь еще не создал ни одного квеста
                                                {{/if}}
                                            </div>
                                        {{/if}}
                                    </div>
                                </div>
                            </div>

                            <div class="tab-pane" id="finished-quest"> 
                                <div name="finished-quest">
                                    <div class="quest">
                                        <div class="row">
                                            {{#if finished}}
                                                {{>tableImages/tableImages this arr=../finished}}
                                            {{else}}
                                                <div class="text-center message">
                                                    {{#if self}}
                                                        Вы еще не прошли ни одного квеста
                                                    {{else}}
                                                        Пользователь еще не прошел ни одного квеста
                                                    {{/if}}
                                                </div>
                                            {{/if}}
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="tab-pane" id="in-process-quest"> 
                                <div name="in-process-quest">
                                    <div class="quest">
                                        <div class="row">
                                            {{#if inProcess}}
                                                {{>tableImages/tableImages this arr=../inProcess}}
                                            {{else}}
                                                <div class="text-center message">
                                                    {{#if self}}
                                                        Сейчас вы не проходите ни одного квеста
                                                    {{else}}
                                                        Сейчас пользователь не проходит ни одного квеста
                                                    {{/if}}
                                                </div>
                                            {{/if}}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    {{/content}}

    {{#content "scripts"}}
        {{#if commonData.isDev}}
            <script src="/userPage.js"></script>
        {{else}}
            <link rel="script" href="//dream-team-4.surge.sh/userPage.js">
        {{/if}}
    {{/content}}
{{/extend}}
